extends ./layout/baseLogin.pug
block content 

    main(class="main-login")
        div(class="contenedor-login")
            h2(class="h2-login")= pelicula
            form(action="/login", method="post")
                div(class="form-group")
                    label(for="user") Usuario
                    input(type="user" class="form-control" id="user" name="user" placeholder="Ingrese su usuario")
                div(class="form-group")
                    label(for="password") Contraseña
                    input(type="password" class="form-control" id="password" name="password" placeholder="Contraseña")
                div(class="form-group")
                    button(type="submit" class="btn btn-primary btn-block" id="btn-login") Iniciar sesión
