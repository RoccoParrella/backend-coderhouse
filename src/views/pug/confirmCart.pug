extends ./layout/base.pug
block content 

    main
        div(class="contenedor")
            p(class="title") CONFIRMACION DE COMPRA
            
        div(class="contenedor-peliculas")
            h2(class="h2-peliculas")= `Estas seguro que quieres comprar ${data.length} peliculas/series?`
            ul(class="li-peliculas-confirm")
                each pelicula in data
                    li(class="li-peliculas-confirm")
                        p(class="li-peliculas-confirm")= pelicula.title

            button(class="boton-comprar" onclick=`sendOrder('${user.cartId}')`) Si, confirmar

    script(src="/static/js/cart.js")
    script(src="/static/js/inicializarBadget.js")